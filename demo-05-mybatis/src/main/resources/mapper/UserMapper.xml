<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hlq.mybatis.mapper.UserMapper">
    <select id="findUserById" resultType="com.hlq.mybatis.entity.User" parameterType="Long">
        select * from tb_user where id=#{id}
    </select>

    <select id="findUser" resultType="com.hlq.mybatis.entity.User">
        select * from tb_user where username=#{username}
    </select>

    <select id="findUserByUserName" resultType="com.hlq.mybatis.entity.User">
        select * from tb_user where username=#{username}
    </select>

    <select id="findUserByUserNameAndPwd" resultType="com.hlq.mybatis.entity.User">
        select * from tb_user where username=#{username} and password=#{password}
    </select>

    <insert id="insert" parameterType="com.hlq.mybatis.entity.User">
        insert into tb_user(username, passwrod, code, status, gmt_create, gmt_modified)
        values (#{username},#{password}, #{code}, #{status}, DATE(), DATE())
    </insert>

</mapper>

