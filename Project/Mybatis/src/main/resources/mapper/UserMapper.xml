<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hlq.mybatis.mapper.UserMapper" >
    <resultMap id="BaseResultMap" type="com.hlq.mybatis.entity.User" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="gender" property="gender" jdbcType="INTEGER"/>
<!--        &lt;!&ndash;     一对一关联   &ndash;&gt;-->
<!--        <association property="address" javaType="com.hlq.mybatis.entity.Address" column="id">-->
<!--            <id property="id" column="id" jdbcType="BIGINT"></id>-->
<!--            <result property="name" column="name"></result>-->
<!--            <result property="code" column="code"></result>-->
<!--        </association>-->
        <!--    一对多关联    -->
        <collection property="addresses" ofType="com.hlq.mybatis.entity.Address">
            <result property="id" column="id" />
            <result property="name" column="name" />
            <result property="code" column="code" />
        </collection>
    </resultMap>

    <!--  id必须和方法名一致  -->
    <select id="findAll" resultMap="BaseResultMap" >
        SELECT
            u.id, u.username, u.password, u.gender, a.id, a.name, a.code
        FROM test_user AS u
                 LEFT JOIN test_address AS a
                           ON u.id = a.user_id
        WHERE 1 = 1
    </select>

    <select id="findUserById" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT
            u.id, u.username, u.password, u.gender, a.id, a.name, a.code
        FROM test_user AS u
                 LEFT JOIN test_address AS a
                           ON u.id = a.user_id
        WHERE 1 = 1 AND u.id = #{id}
    </select>

    <insert id="insert" parameterType="com.hlq.mybatis.entity.User" >
        INSERT INTO
            users
            (id, username,password,gender)
        VALUES
            (#{id}, #{username}, #{password}, #{gender})
    </insert>

    <update id="update" parameterType="com.hlq.mybatis.entity.User" >
        UPDATE
        test_user
        SET
        <if test="username != null">username = #{username},</if>
        <if test="password != null">password = #{password},</if>
        gender = #{gender}
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long" >
        DELETE FROM
            test_user
        WHERE
            id = #{id}
    </delete>

</mapper>